<% layout('./layout/template') %>

<h1>Campgrounds</h1>

<p>
    Total Camps: 
    <span>
        <%= campgrounds.length %>
    </span>
</p>

<% for (let campground of campgrounds) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if (campground.images.length) { %>
                    <img class="img-fluid" src="<%= campground.images[0].url %>" alt="Campground Image" />
                <% } else { %>
                    <img class="img-fluid" src="https://res.cloudinary.com/ux-ui-designer/image/upload/v1624913177/Campgrounds/placeholder_rmhlxa.jpg" alt="Image Placeholder" />
                <% } %>
            </div>

            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
    
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
    
                    <p class="card-text">
                        <span class="text-muted">
                            <%= campground.location %>
                        </span>
                    </p>
    
                    <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">
                        View <%= campground.title %>
                    </a>
                </div>
            </div>
        </div>
    </div>
<% } %>
