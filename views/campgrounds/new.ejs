<% layout('./layout/template') %>

<div class="row">
    <h1 class="text-center">New Campground</h1>

    <div class="col-6 offset-3">
        <form class="needs-validation" action="/campgrounds" method="POST" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" id="title" type="text" name="campground[title]" required>
                <div class="valid-feedback">Success!</div>
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" id="location" type="text" name="campground[location]" required>
                <div class="valid-feedback">Success!</div>
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" id="image" type="text" name="campground[image]" required>
                <div class="valid-feedback">Success!</div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="price" aria-label="Amount (to the nearest dollar)" placeholder="0.00" name="campground[price]" required>
                    <div class="valid-feedback">Success!</div>
                </div>
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" type="text" name="campground[description]" required></textarea>
                <div class="valid-feedback">Success!</div>
            </div>
        
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
        </div>
</div>
