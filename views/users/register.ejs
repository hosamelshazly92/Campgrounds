<% layout('layout/template') %> 

<div class="d-flex justify-content-center">
    <div class="card shadow w-50 p-2">
        <div class="card-body">
            <div class="card-title">
                <h1>Register</h1>
            </div>

            <form class="needs-validation" action="/register" method="POST" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" id="username" type="text" name="username" pattern="[a-zA-z0-9]{5,20}" required autofocus>
                    <div class="valid-feedback">Success!</div>
                    <div class="invalid-feedback">username between 5 - 20 letters with no spaces or special characters</div>
                </div>
            
                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control" id="email" type="text" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required>
                    <div class="valid-feedback">Success!</div>
                    <div class="invalid-feedback">email only takes ' . ' and '@' as special characters</div>
                </div>
            
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" id="password" type="password" name="password" minlength="4" required>
                    <div class="valid-feedback">Success!</div>
                    <div class="invalid-feedback">password must be more than 4 characters</div>
                </div>
            
                <div class="d-flex flex-column mb-3">
                    <button class="btn btn-success mb-3">Register</button>
            
                    <a class="text-center" href="/login">Login</a>
                </div>
            </form>
        </div>
    </div>
</div>
